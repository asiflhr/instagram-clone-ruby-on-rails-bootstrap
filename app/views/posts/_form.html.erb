<div class='col-xl-4 col-md-6 col-sm-8 col-10 m-auto' style='background-color:#dadada; border-radius: 7px; padding: 15px; box-shadow: 0px 0px 15px 15px (255, 255, 255, 0.4)'>
  <%= form_with(model: post) do |form| %>

    <h1>New post</h1>

    <div class='mb-3'>
      <% invalid = post.errors.include?(:title) %>
      <%= form.text_field :title, class:'form-control', placeholder:'Title' %>
      <% if invalid %>
        <p style='color:red' class='text-sm'>
          <%= post.errors.full_messages_for(:title).join(", ")%>
        </p>
      <% end %>
    </div>

    <div class='mb-3'>
      <% invalid = post.errors.include?(:description) %>
      <%= form.text_area :description, rows: 8, class:'form-control', placeholder:'Description' %>
      <% if invalid %>
        <p style='color:red' class='text-sm'>
          <%= post.errors.full_messages_for(:description).join(", ")%>
        </p>
      <% end %>
    </div>

    <div class='mb-3'>
      <% invalid = post.errors.include?(:keywords) %>
      <%= form.text_field :keywords, class:'form-control', placeholder:'Keywords' %>
      <% if invalid %>
        <p style='color:red' class='text-sm'>
          <%= post.errors.full_messages_for(:keywords).join(", ")%>
        </p>
      <% end %>
      
      <%= form.file_field :images, multiple:true %>
    </div>

    <div>
      <%= form.submit class:'btn btn-primary col-12' %>
    </div>
  </div>
<% end %>
