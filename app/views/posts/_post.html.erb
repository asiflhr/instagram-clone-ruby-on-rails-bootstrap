<div id="<%= dom_id post %>" class='post-container'>
  <p>
    <%= post.title %>
  </p>

  <p>
    <%= post.description %>
  </p>

  <p>
    <%= post.keywords %>
  </p>

  <p>
    <%= link_to '', post, class: 'post-link' %>
  </p>

  <div style='display: flex; justify-content: center; '>
    <div class='masonry'>
      <% post.images.each do |image| %>
        <div class='image'>
          <%= image_tag image %>
        </div>
      <% end %>
    </div>
  </div>
</div>
